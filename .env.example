# Docker Compose Project
COMPOSE_PROJECT_NAME=chamilo2
ENVIRONMENT=dev

# Container Names
MARIADB_CONTAINER=chamilo2-db
CHAMILO_CONTAINER=chamilo2-app

# Docker Network Name
DOCKER_NETWORK=chamilo2-network

# Docker Image Name
DOCKER_IMAGE_NAME=chamilo2-php8:latest

# Database Credentials
MYSQL_ROOT_PASSWORD=<CHANGE-ME>
MYSQL_USER=chamilo2
MYSQL_PASSWORD=<CHANGE-ME-TOO>
MYSQL_DATABASE=chamilo2

# Database Port
MARIADB_PORT=3306

# Application Port
CHAMILO_PORT=8080

# PHP Version
PHP_VERSION=8.2.30

# Chamilo Version
CHAMILO_VERSION=2.0.0-RC.1

# PHP Environment
APP_ENV=dev
APP_DEBUG=1

# Volume Paths
MARIADB_DATA_PATH=./data/mariadb
CHAMILO_ROOT_PATH=./data/chamilo